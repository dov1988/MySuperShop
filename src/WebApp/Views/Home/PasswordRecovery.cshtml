
@{
    Layout = null;
    ViewBag.Title = "PasswordRecovery";
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>My Super Shop - Восстановление пароля</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div>
        <h4><b>Восстановление пароля</b></h4>
        <p>
            Если вы забыли пароль для входа на сайт, введите номер телефона
            или адрес электронной почты для восстановления пароля и нажмите
            кнопку "Получить пароль".
        </p>
        @Html.TextBox("Номер телефона", "Введите номер телефона или email...")
        <br />
        <br />
        <p><input type="submit" value="Получить пароль" /></p>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
</body>
</html>
